{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "script",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "semi": "error",
    "no-undef": "error"
  },
  "globals": {
    "React": true,
    "ReactDOM": true,
    "describe": true,
    "it": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}
